<div class="valign-wrapper" style="width: 100%;height:100%;position: absolute;">
  <div class="valign" style="width: 100%;">
    <div class="container">
      <div class="row">
        <form class="col s12 m6 l4 offset-m3 offset-l4 card-panel">
          <div class="input-field">
            <input class="validate" type="text" placeholder="Michael Jordan" id="name">
            <label for="name">Name</label>
          </div>
          <div class="input-field">
            <input class="validate" type="email" placeholder="mail@example.com" id="email">
            <label for="email">Email</label>
          </div>
          <div class="input-field">
            <input class="validate" type="password" placeholder="rickey" id="password">
            <label for="password">Password</label>
          </div>
          <div class="input-field">
            <input class="validate" type="password" placeholder="rickey" id="password-confirmation">
            <label for="password">Password Confirmation</label>
          </div>
          <div class="input-field">
            <button class="btn" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
